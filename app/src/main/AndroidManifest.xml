<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.serpensortia">

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AddAnimalActivity"
            />
        <activity
            android:name=".AnimalMainActivity"
            android:label="@string/title_activity_animal_main" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
        android:name="AA_DB_NAME"
        android:value="serpensortiaDB.db" />

        <meta-data
        android:name="AA_DB_VERSION"
        android:value="1" />

        <provider
            android:name="com.activeandroid.content.ContentProvider"
            android:authorities="com.example.serpensortia"
            android:enabled="true"
            android:exported="false"/>

    </application>



    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

</manifest>